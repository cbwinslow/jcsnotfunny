  "weight_decay": 0.01,
  "warmup_ratio": 0.1,
  "seed": 42,
  "full_finetune": false,
  "lora_r": 8,
  "lora_alpha": 16,
  "lora_dropout": 0.05,
  "lora_target_modules": "query,value"
