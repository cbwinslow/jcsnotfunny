# Include additional files in the package distribution
include LICENSE
include CHANGELOG.md
include README.md
include requirements-dev.txt

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst

# Include examples
recursive-include examples *.py
recursive-include examples *.md
recursive-include examples *.txt

# Include configuration files
recursive-include agents *.json
recursive-include configs *.yml
recursive-include configs *.yaml
recursive-include configs *.json

# Include test fixtures
recursive-include tests/fixtures *.json
recursive-include tests/fixtures *.txt
recursive-include tests/fixtures *.md

# Exclude development files
global-exclude *.pyc
global-exclude __pycache__
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov/
global-exclude *.log
global-exclude .env
global-exclude .vscode/
global-exclude .idea/

# Exclude large media files
global-exclude *.mp4
global-exclude *.avi
global-exclude *.mov
global-exclude *.jpg
global-exclude *.png
global-exclude *.gif
